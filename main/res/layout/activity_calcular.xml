<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalcularActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="2"
        android:orientation="vertical"
        android:rowCount="8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:fontFamily="serif"
            android:textStyle="bold"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:text="Resultados"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:fontFamily="serif"
            android:textStyle="bold"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:text="Ingreso\nTotal"
            android:textAlignment="center"
            android:textSize="25sp" />

        <TextView
            android:fontFamily="serif"
            android:id="@+id/ingresoTotal"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:text="25000.0"
            android:textAlignment="center"
            android:textSize="25sp" />

        <TextView
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:text="Límite\nInferior"
            android:textAlignment="center"
            android:textSize="25sp"/>

        <TextView
            android:fontFamily="serif"
            android:id="@+id/limInferior"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:text="$1000000"
            android:textAlignment="center"
            android:textSize="25sp"/>

        <TextView
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:text="Tasa"
            android:textAlignment="center"
            android:textSize="25sp"/>

        <TextView
            android:fontFamily="serif"
            android:id="@+id/tasa"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:text="$10"
            android:textAlignment="center"
            android:textSize="25sp"/>

        <TextView
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:text="Impuesto\nMarginal"
            android:textAlignment="center"
            android:textSize="25sp"/>

        <TextView
            android:fontFamily="serif"
            android:id="@+id/impuestoMarginal"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:text="$10"
            android:textAlignment="center"
            android:textSize="25sp"/>

        <TextView
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:text="Cuota\nFija"
            android:textAlignment="center"
            android:textSize="25sp"/>

        <TextView
            android:fontFamily="serif"
            android:id="@+id/cuotaFija"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:text="$10"
            android:textAlignment="center"
            android:textSize="25sp"/>

        <TextView
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:text="Impuesto a\nRetener"
            android:textAlignment="center"
            android:textSize="25sp"/>

        <TextView
            android:fontFamily="serif"
            android:id="@+id/impuesto"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:text="$10"
            android:textAlignment="center"
            android:textSize="25sp"/>

        <TextView
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:text="Percepción\nEfectiva"
            android:textAlignment="center"
            android:textSize="25sp"/>

        <TextView
            android:fontFamily="serif"
            android:id="@+id/percepcion"
            android:layout_row="7"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:text="$10"
            android:textAlignment="center"
            android:textSize="25sp"/>
    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>